<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="439.0" style="-fx-background-color: #aa2b2b;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controllers.EditClass" stylesheets="@/sample/style/style.css">
   <children>
      <Pane layoutX="69.0" layoutY="42.0" prefHeight="355.0" prefWidth="500.0" style="-fx-background-color: White;
       -fx-background-radius: 50px;">
         <children>
<!--            TextField for Student's Class        -->
            <TextField fx:id="capacity" styleClass="sc" layoutX="134.0" layoutY="141.0" prefHeight="45.0" prefWidth="320.0"
                       promptText="Number of students">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </TextField>
<!--            eidt Button        -->
            <Button focusTraversable="false" layoutX="322.0" layoutY="301.0" mnemonicParsing="false" prefHeight="40.0"
                    prefWidth="85.0" style="-fx-background-color: #DDD;" styleClass="button1" text="EDIT" onAction="#edit">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
<!--            Class Label     -->
            <Label layoutX="46.0" layoutY="151.0" text="Capacity" textFill="#030303">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
<!--            TextField for Stude fx:id="addcusconfirm"nt's Name     -->
            <TextField styleClass="sn" layoutX="134.0" layoutY="41.0" prefHeight="45.0" prefWidth="320.0"
                       promptText="Class's Name" fx:id="name">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </TextField>
<!--            Name Label        -->
            <Label layoutX="43.0" layoutY="51.0" text="Name">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
<!--            Label for message       -->
            <Label fx:id="msg" layoutX="46.0" layoutY="218.0" prefHeight="40.0" prefWidth="300.0" textFill="#f50000">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
<!--            CANCEL Button     -->
            <Button layoutX="122.0" layoutY="301.0" prefHeight="40.0" prefWidth="85.0" style="-fx-background-color: #DDD;"
                    text="CANCEL" onAction="#cancel">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
